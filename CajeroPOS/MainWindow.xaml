<Window x:Class="CajeroPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proyecto Cajero" Height="1850" Width="900"
        Background="#FFF8F8F8">

    <Grid Margin="10">



        <Label x:Name="lblHora"
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,0,0,0"/>
        <TabControl Margin="10">
            <TabItem Header="Cajero">
                <!-- Contenedor único -->
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="124*" />
                        <ColumnDefinition Width="293*" />
                    </Grid.ColumnDefinitions>

                    <!-- Panel productos -->
                    <StackPanel Margin="10,10,10,0" VerticalAlignment="Top" Height="297">
                        <TextBlock Text="Productos"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#FF333333"
                           Margin="0,0,0,20"/>

                        <Button Content="🍔 Big Mac - 5,99€"
                        Height="70"
                        Margin="0,5"
                        FontSize="20"
                        Click="BigMac_Click"/>

                        <Button Content="🍟 Patatas - 2,50€"
                        Height="70"
                        Margin="0,5"
                        FontSize="20"
                        Click="Patatas_Click"/>

                        <Button Content="🥤 Bebida - 1,99€"
                        Height="70"
                        Margin="0,5"
                        FontSize="20"
                        Click="Bebida_Click"/>
                    </StackPanel>
                    <ScrollViewer Grid.Column="1">
                        <!-- Panel pedido y control -->
                        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top" >

                            <!-- Pedido actual -->
                            <TextBlock Text="Pedido actual"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#FF333333"
                           Margin="0,0,0,10"/>

                            <ListBox x:Name="lstPedido" Height="150"
                         FontSize="18"
                         Background="WhiteSmoke"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>

                            <TextBlock x:Name="txtTotal"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,10"
                           Foreground="#FF333333"/>

                            <Button Content="Confirmar pedido"
                        Height="60"
                        Background="#FF28A745"
                        Foreground="White"
                        FontSize="20"
                        Margin="0,10,0,0"
                        Click="Confirmar_Click"/>


                            <!-- Control de pedidos -->
                            <TextBlock Text="Pedidos en preparación"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF333333"
                           Margin="0,30,0,10"/>

                            <ListBox x:Name="lstPedidosPreparacion"
                         Height="100"
                         FontSize="18"
                         Background="WhiteSmoke"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>

                            <Button Content="Marcar como LISTO"
                        Height="50"
                        Background="#FF218838"
                        Foreground="White"
                        FontSize="18"
                        Margin="0,10,0,0"
                        Click="MarcarListo_Click"/>

                            <TextBlock Text="Pedidos listos"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="#FF333333"
                            Margin="0,30,0,10"/>

                            <ListBox x:Name="lstPedidosListos"
                          Height="100"
                          FontSize="18"
                          Background="WhiteSmoke"
                          BorderBrush="#FFCCCCCC"
                          BorderThickness="1"/>

                            <Button Content="Eliminar"
                     Height="50"
                     Background="#FF218838"
                     Foreground="White"
                     FontSize="18"
                     Margin="0,10,0,0"
                     Click="Eliminar_Click"/>

                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </TabItem>

            <TabItem Header="Gestion de usuarios">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Datos del Usuario" Margin="0,0,0,10">
                        <StackPanel Margin="10">
                            <Label Content="Nombre"/>
                            <TextBox x:Name="txtNombreUsuario"/>

                            <Label Content="Contraseña"/>
                            <TextBox x:Name="txtConstraseña"/>

                            <Label Content="Rol"/>
                            <ComboBox x:Name="cmbRol">
                                <ComboBoxItem Content="Administrador"/>
                                <ComboBoxItem Content="Cajero"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="Agregar" Width="80" Margin="5" Click="agregarUsuarios"/>
                                <Button Content="Modificar" Width="80" Margin="5" Click="modificarUsuario"/>
                                <Button Content="Eliminar" Width="80" Margin="5" Click="eliminarUsuario"/>

                                <Label x:Name="lblUsuario"
                                        Content=""
                                        FontSize="16"
                                        FontWeight="Bold"
                                        />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <DataGrid Grid.Row="1"
                  x:Name="dgUsuarios"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionChanged="dgUsuarios_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>

                            <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>







            </TabItem>

            <TabItem Header="facturas">

                <Border x:Name="ticketTermico"
        Width="280"
        Background="White"
        Padding="10"
        Visibility="Visible">

                    <StackPanel>

                        <!-- Empresa -->
                        <TextBlock Text="Tu Empresa"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Av. Principal 123"
                   FontSize="10"
                   HorizontalAlignment="Center"/>

                        <TextBlock Text="CIF: A12345678"
                   FontSize="10"
                   HorizontalAlignment="Center"/>

                        <Separator Margin="5"/>

                        <!-- Datos -->
                        <TextBlock x:Name="tkNumero" FontSize="10"/>
                        <TextBlock x:Name="tkFecha" FontSize="10"/>
                        <TextBlock x:Name="tkUsuario" FontSize="10"/>

                        <Separator Margin="5"/>

                        <!-- Productos -->
                        <ItemsControl x:Name="tkProductos">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Cantidad}" FontSize="10"/>
                                        <TextBlock Text="{Binding Nombre}" Grid.Column="1" FontSize="10"/>
                                        <TextBlock Text="{Binding PrecioTotal, StringFormat={}{0:0.00} €}"
                           Grid.Column="2"
                           FontSize="10"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>



                        <Separator Margin="5"/>

                        <!-- Total -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="TOTAL"
                       FontWeight="Bold"
                       FontSize="12"/>

                            <TextBlock x:Name="tkTotal"
                       Grid.Column="1"
                       FontWeight="Bold"
                       FontSize="12"/>
                        </Grid>
                        <!-- Importe recibido -->
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="RECIBIDO"
               FontSize="10"/>

                            <TextBlock x:Name="tkRecibido"
               Grid.Column="1"
               FontSize="10"/>
                        </Grid>

                        <!-- Cambio -->
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="CAMBIO"
               FontSize="10"/>

                            <TextBlock x:Name="tkCambio"
               Grid.Column="1"
               FontSize="10"/>
                        </Grid>
                        <Separator Margin="5"/>

                        <TextBlock Text="Gracias por su compra"
                   FontSize="10"
                   HorizontalAlignment="Center"/>


                    </StackPanel>

                </Border>


            </TabItem>
        </TabControl>

    </Grid>
</Window>
